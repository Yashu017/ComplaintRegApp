<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#eee">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/textView1Admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#3f48cc"

                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:text="@string/ComplaintID"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/textView1TypeAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_alignParentStart="true"
                android:text="Complain Type : "
                android:layout_below="@+id/textView1Admin"
                android:textSize="17sp" />




            <TextView
                android:id="@+id/titleAdmin"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1TypeAdmin"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:layout_alignParentStart="true"
                android:text="Subject : " />





            <ImageView
                android:id="@+id/imageViewAdmin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/titleAdmin"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:outlineSpotShadowColor="#000"
                app:srcCompat="@drawable/ic_info_black_24dp"/>



            <TextView
                android:id="@+id/textView2Admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleAdmin"
                android:layout_toRightOf="@+id/imageViewAdmin"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:text="@string/status" />

            <TextView
                android:id="@+id/getTimeAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="15dp"

                android:text="N/A"
                android:layout_below="@id/textView2Admin"
                android:layout_alignParentStart="true"
                android:textSize="17sp"  />
            <TextView
                android:id="@+id/textView4Admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2Admin"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text="00:00" />


            <TextView
                android:id="@+id/ToAdmin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2Admin"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text="00:00" />
            <TextView
                android:id="@+id/fromAdmin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2Admin"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text="00:00" />
            <TextView
                android:id="@+id/descriptionAdmin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2Admin"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text="00:00" />
            <TextView
                android:id="@+id/LocationAdmin"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2Admin"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:text="00:00" />





        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>